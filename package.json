{
  "name": "react-inline-loaders",
  "version": "1.0.5",
  "description": "React inline loaders (components)",
  "keywords": [
    "loaders",
    "react",
    "reactjs"
  ],
  "homepage": "https://github.com/raulanatol/react-inline-loaders#readme",
  "bugs": {
    "url": "https://github.com/raulanatol/react-inline-loaders/issues"
  },
  "license": "MIT",
  "author": "raulanatol",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raulanatol/react-inline-loaders.git"
  },
  "scripts": {
    "analyze": "source-map-explorer lib/index.js",
    "analyze-bundle": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "build-storybook": "rm -rf gh-pages && build-storybook -o gh-pages",
    "dist": "rm -rf dist && webpack",
    "lint": "eslint . --ext .ts,.tsx",
    "postpublish": "yarn run build-storybook && gh-pages -d gh-pages",
    "storybook": "start-storybook -p 6006",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@emotion/core": "^10.0.14",
    "@emotion/styled": "^10.0.14",
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-info": "^5.1.9",
    "@storybook/addon-knobs": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-notes": "^5.1.9",
    "@storybook/addon-options": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@storybook/storybook-deployer": "^2.8.1",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.7",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "autoprefixer": "^9.6.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-runtime": "^6.26.0",
    "cssnano": "^4.1.10",
    "dts-bundle": "^0.7.3",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-jest": "^22.14.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "gh-pages": "^2.0.1",
    "github-release-notes": "^0.17.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-css-modules": "^2.1.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-reporter": "^6.0.1",
    "postcss-url": "^8.0.0",
    "pre-push": "^0.1.1",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.1.0",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "peerDependencies": {
    "@emotion/core": "^10.0.14",
    "@emotion/styled": "^10.0.14"
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest/after.ts"
    ]
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "user": "raulanatol",
  "dependencies": {
    "npm-check-updates": "^3.1.20"
  }
}
